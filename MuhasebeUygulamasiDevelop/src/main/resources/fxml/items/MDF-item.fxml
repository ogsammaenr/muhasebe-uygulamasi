<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.muhasebeuygulamasidevelop.controller.items.MdfItemController"
      styleClass="mdf-item"
      spacing="10"
      alignment="CENTER"
      style="-fx-padding: 12;">

    <children>
        <!-- Kalınlık ve Info ikonu HBox içinde -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <Region HBox.hgrow="ALWAYS" />
            <!-- Kalınlık label -->
            <Label fx:id="mdfThicknessLabel" styleClass="mdf-name" text="-" />

            <!-- Spacer: ikonun sağa kaymasını sağlar -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Info ikonu -->
            <Label fx:id="infoIcon" text="i" styleClass="mdf-info-icon"/>
        </HBox>

        <!-- GridPane: ölçü, fiyat, zaman -->
        <GridPane hgap="12" vgap="6">
            <columnConstraints>
                <!-- Sol kolon: etiket -->
                <ColumnConstraints halignment="RIGHT" minWidth="90"/>
                <!-- Sağ kolon: değer -->
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <!-- Ölçü (genişlik x uzunluk yan yana) -->
                <Label text="Ölçü:"
                       styleClass="mdf-extra-label"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0"/>
                <Label fx:id="mdfSizeLabel"
                       styleClass="mdf-extra-value"
                       text="- x -"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="1"/>

                <!-- Toplam Fiyat -->
                <Label text="Toplam Fiyat:"
                       styleClass="mdf-extra-label"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="0"/>
                <Label fx:id="mdfTotalPriceLabel"
                       styleClass="mdf-extra-value"
                       text="-"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="1"/>

                <!-- Toplam Zaman -->
                <Label text="Toplam Zaman:"
                       styleClass="mdf-extra-label"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="0"/>
                <Label fx:id="mdfTotalTimeLabel"
                       styleClass="mdf-extra-value"
                       text="-"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="1"/>

                <!-- Adet -->
                <Label text="Adet:"
                       styleClass="mdf-extra-label"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="0"/>
                <HBox spacing="6"
                      alignment="CENTER_LEFT"
                      GridPane.rowIndex="3"
                      GridPane.columnIndex="1">

                    <!-- Adet değeri -->
                    <Label fx:id="mdfCountLabel"
                           text="-"
                           styleClass="mdf-extra-value"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <!-- Silme butonu -->
                    <Button fx:id="deleteButton"
                            text="✖"
                            styleClass="mdf-delete-button"
                            focusTraversable="false"
                            mnemonicParsing="false"/>
                </HBox>
            </children>
        </GridPane>

    </children>
</VBox>